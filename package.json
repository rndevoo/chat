{
  "name": "chat",
  "version": "1.0.0",
  "description": "rndevoo's chat microservice",
  "main": "src/server.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "dev": "nodemon -e ts --exec ts-node src/server.ts",
    "preprod": "yarn run build",
    "prod": "node dist/server.js",
    "test": "nyc yarn run test:unit && yarn run test:integration",
    "test:unit": "mocha src/**/*.spec.ts --compilers ts:ts-node/register",
    "test:integration": "exit 0",
    "lint": "tslint --fix src test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "gen_env_file": "scripts/gen_env_file"
  },
  "repository": "git@github.com:rndevoo/messages.git",
  "author": "Diego Stratta <strattadb@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "amqplib": "^0.5.1",
    "uuid": "^3.0.1",
    "winston": "^2.3.1",
    "ws": "^3.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.1",
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.2.2",
    "@types/sinon-chai": "^2.7.27",
    "@types/uuid": "^3.0.0",
    "@types/winston": "^2.3.2",
    "@types/ws": "^3.0.0",
    "chai": "^4.0.0",
    "chai-as-promised": "^7.0.0",
    "coveralls": "^3.0.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.1",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "ts-node": "^3.0.4",
    "tslint": "^5.3.2",
    "typescript": "^2.3.3"
  },
  "engines": {
    "node": ">=7.10.0"
  },
  "optionalDependencies": {
    "bufferutil": "^3.0.0",
    "utf-8-validate": "^3.0.1"
  }
}
